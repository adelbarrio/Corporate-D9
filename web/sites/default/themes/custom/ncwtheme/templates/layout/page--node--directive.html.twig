{% extends "page.html.twig" %}

{% block content %}

{% set has_sidebar_first = page.sidebar_first|render|striptags|trim is not empty %}
{% set has_sidebar_second_related = page.sidebar_second_related|render|striptags|trim is not empty %}

<div class="breadcrumb-fluid">
  <div class="container"> {{ page.breadcrumb }}</div>
</div>
<div class="container">
  <div class="row">
    <aside class="section col-12 col-lg-3 sidebar-first" role="complementary">
      <nav role="navigation" aria-labelledby="block-mainnavigation-2--2-menu" id="block-mainnavigation-2--2" class="contextual-region block block-menu navigation menu--main">
        {{ drupal_menu('main') }}
      </nav>
      {{ page.sidebar_first }}
    </aside>
    {% if has_sidebar_first and not has_sidebar_second_related %}
      <div id="main" class="col-12 col-lg-9 two-column mx-auto">
    {% endif %}
    {% if has_sidebar_first and has_sidebar_second_related %}
      <div id="main" class="col-12 col-lg-6 three-column mx-auto">
    {% endif %}
      <section class="section">
        <a id="main-content" tabindex="-1"></a>
        <div class="latest-revision-date moved-by-js">
          {{ 'Latest update: ' ~ node.revision_timestamp.value|date('d/m/Y') }}
        </div>
        {{ page.content }}
      </section>
    </div>
    {% if has_sidebar_second_related %}
      <aside class="section col-12 col-lg-3 sidebar-second" role="complementary">
        <h2 class="related">{{ 'Related' | trans }}</h2>
        <div class="related-views">
          {{ page.sidebar_second_related }}
        </div>
      </aside>
    {% endif %}
  </div>

</div>
{% endblock %}
