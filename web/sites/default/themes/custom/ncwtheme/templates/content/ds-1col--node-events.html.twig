{#
/**
 * @file
 * Display Suite 1 column template.
 *
 * Available variables:
 * - ds_content_wrapper: wrapper around content
 * - attributes: content region attributes
 * - ds_content: content region
 */
#}

<{{ ds_content_wrapper }}{{ attributes.addClass('ds-1col', 'clearfix') }}>

{{ title_suffix.contextual_links }}

<div class="h1-back-wrapper">
  <h1>{{ 'OSH events' | trans }}</h1>
  <a href="/oshevents" class="pull-right-flex back-to-link">{{ 'Back to events' | trans }}</a>
</div>
{% if not node.isPublished() %}
  <mark class="unpublished">Unpublished</mark>
  <{{ ds_content_wrapper }}{{ attributes.addClass('node--unpublished') }}>
{% endif %}

<div{{ content_attributes.addClass('node__content', 'clearfix') }}>
<h2>{{ ds_content.node_title }}</h2>

<div class="group-events-event-details field field-group-div">
  <h3 class="events-title">{{ 'Event Details' | trans }}</h3>
  {% if ds_content.group_events_event_details.field_location.0 %}
  <div class="field--label-inline">
    <div class="field__label">{{ 'Location' | trans  }}</div>
    <div class="field__item">{{ ds_content.group_events_event_details.field_location.0['#context'].value }}</div>
  </div>
  {% endif %}
  {% if ds_content.group_events_event_details.field_city.0 %}
  <div class="field--label-inline">
    <div class="field__label">{{ 'City' | trans  }}</div>
    <div class="field__item">{{ ds_content.group_events_event_details.field_city.0['#context'].value }}</div>
  </div>
  {% endif %}
  {% if ds_content.group_events_event_details.field_country_code.0 %}
    <div class="field--label-inline">
      <div class="field__label">{{ 'Country' | trans }}</div>
      <div class="field__item">{{ ds_content.group_events_event_details.field_country_code.0['#markup'] }}</div>
    </div>
  {% endif %}
  {% if ds_content.group_events_event_details.field_organization.0 %}
    <div class="field--label-inline">
      <div class="field__label">{{ 'Organisation' | trans }}</div>
      <div class="field__item">{{ ds_content.group_events_event_details.field_organization.0['#context'].value }}</div>
    </div>
  {% endif %}
  {% if ds_content.group_events_event_details.field_date.0['#text'] %}
    <div class="field--label-inline">
      <div class="field__label">{{ 'Date' | trans }}</div>
      <time class="datetime">{{ ds_content.group_events_event_details.field_date.0['#text'] }}</time>
    </div>
  {% endif %}
  {% if ds_content.group_events_event_details.field_date.0.start_date %}
    <div class="field--label-inline">
      <div class="field__label">{{ 'Date' | trans }}</div>
      <time class="datetime">{{ ds_content.group_events_event_details.field_date.0.start_date['#text'] }}</time>
      <time class="datetime">- {{ ds_content.group_events_event_details.field_date.0.end_date['#text'] }}</time>
    </div>
  {% endif %}
</div>

{% if ds_content.group_events_description.body.0 %}
  <div class="group-events-event-details field field-group-div">
    <h3 class="events-title">{{ 'Description' | trans }}</h3>
    {{ ds_content.group_events_description.body.0 }}
  </div>
{% endif %}

{% if ds_content.group_events_link.field_website_of_event %}
  <div class="group-events-event-details field field-group-div">
    <h3 class="events-title">{{ 'Link' | trans }}</h3>
    {{ ds_content.group_events_link.field_website_of_event }}
  </div>
{% endif %}

{% if ds_content.group_events_related_documents.field_related_documents %}
<div class="group-events-event-details field field-group-div">
  <h3 class="events-title">{{ 'Related resources' | trans }}</h3>
  {{ ds_content.group_events_related_documents.field_related_documents }}
</div>
{% endif %}
</div>
</{{ ds_content_wrapper }}>
